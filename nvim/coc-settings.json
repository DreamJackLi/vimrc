{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
			 "initializationOptions": {
					"diagnosticsEnabled": true,
					"lintTool": "golint",
          "cache": {
           "directory": "~/.vim/cache"
          } 
			}
  }
}
}
